<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>slash.navigation</groupId>
    <artifactId>RouteConverter</artifactId>
    <packaging>pom</packaging>
    <version>1.32-SNAPSHOT</version>
    <name>RouteConverter</name>
    <url>http://www.routeconverter.de</url>

    <developers>
        <developer>
            <id>cpesch</id>
            <name>Christian Pesch</name>
            <email>support at routeconverter dot de</email>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>routeconverter-thirdparty</id>
            <url>http://www.routeconverter.de/svn/RouteThirdParty</url>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>routeconverter-release</id>
            <name>RouteConverter Release Repository</name>
            <url>scpexe://www.routeconverter.de:/home/notroot/public_html/routeconverter.com/static/downloads</url>
        </repository>
        <snapshotRepository>
            <id>routeconverter-prerelease</id>
            <name>RouteConverter Prerelease Snapshot Repository</name>
            <url>scpexe://www.routeconverter.de:/home/notroot/public_html/routeconverter.com/static/downloads/prerelease</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>1.0-alpha-5</version>
            </extension>
        </extensions>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>ISO-8859-1</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <encoding>ISO-8859-1</encoding>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.vineetmanohar</groupId>
                <artifactId>maven-twitter-plugin</artifactId>
                <version>0.1</version>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>catalog</module>
        <module>common</module>
        <module>common-gui</module>
        <module>elevationview</module>
        <module>jaxb5</module>
        <module>jaxb6</module>
        <module>jdic-mapview</module>
        <module>geonames</module>
        <module>googlemaps</module>
        <module>mapview</module>
        <module>navigation-formats</module>
        <module>rest</module>
        <module>route-converter</module>
        <module>route-converter-cmdline</module>
        <module>route-converter5</module>
        <module>route-converter6</module>
        <module>swt-mapview</module>
        <module>route-converter-build</module>
        <module>route-converter-license</module>
        <module>RouteConverterCmdLine</module>
        <module>RouteConverterLinux</module>
        <module>RouteConverterMac</module>
        <module>RouteConverterWindows</module>
    </modules>
</project>
